@page "/speed-classifications"

<PageTitle>Speed Classification</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Speed Classification" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px" Responsive="true"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@speedClassifications" LoadData="@Grid0LoadData" Count="@count" TItem="VehicleMonitoringSystem.Server.Models.ConData.SpeedClassification" RowDoubleClick="@EditRow">
            <Columns>
              
                <RadzenDataGridColumn TItem="VehicleMonitoringSystem.Server.Models.ConData.SpeedClassification" Property="LowerLimitInKmPerHour" Title="Lower Limit(km/h)">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VehicleMonitoringSystem.Server.Models.ConData.SpeedClassification" Property="UpperLimitInKmPerHour" Title="Upper Limit(km/h)">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VehicleMonitoringSystem.Server.Models.ConData.SpeedClassification" Property="Description" Title="Category">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VehicleMonitoringSystem.Server.Models.ConData.SpeedClassification" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="speedClassification">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, speedClassification)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
